@model Entities.TipoEquipo

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link href="~/Content/modern-business.css" rel="stylesheet" />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
       <div class="d-flex flex-column" style="max-width:60%">
        <div class="container-fluid">
            <div class="card shadow mb-4">
                <div class=" card-header py-3" >
                    <h6 class="m-0 font-weight-bold text-primary">Actualizar el Tipo de equipo  <i>"@Html.DisplayFor(model => model.tipoEquipo)"</i></h6>



                </div>
                   <div class="card-body">
             @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                       <div>
                           <h5 class="text-justify">
                               @Html.LabelFor(model => model.tipoEquipo, new { @class = "control-label col-md-2" })
                           </h5>

                           @Html.EditorFor(model => model.tipoEquipo, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(model => model.tipoEquipo, "", new { @class = "text-danger" })
                           @Html.HiddenFor(model => model.Id)
                       </div>
  <br />
  <br />
      <h5  class="text-justify">  
            @Html.LabelFor(model => model.descripcion, new { @class = "control-label col-md-2" })
</h5>
          
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            
        </div>
  <br />
  <br />
  
         </div>
         
       <input type="button" class="btn btn-outline-primary "   value="Volver" onclick="location.href='@Url.Action("Index", "tipoEquipo")'" />

      
                 <input type="submit"  value="Actualizar" class="btn btn-outline-info" />
     </div>
      </div>
   
}

