@model Entities.Marca

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link href="~/Content/modern-business.css" rel="stylesheet" />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
       <div class="d-flex flex-column" style="max-width:40%">
        <div class="container-fluid">
            <div class="card shadow mb-4">
                <div class=" card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Crear una marca </h6>



                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div>
                        <h5 class="text-justify">
                            @Html.LabelFor(model => model.marca, new { @class = "control-label col-md-2" })
                        </h5>

                        @Html.EditorFor(model => model.marca, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.marca, "", new { @class = "text-danger" })

                    </div>
                    <br />
                    <br />

                </div>
                <input type="button" class="btn btn-outline-primary" value="Volver" onclick="location.href='@Url.Action("Index", "Marca")'" />

                <br />

                <input type="submit" value="Crear" class="btn btn-outline-info" />

            </div>
      </div>
    </div>
}

