@model Entities.DireccionPersona

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link href="~/Content/modern-business.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="d-flex flex-column" style="max-width:60%">
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class=" card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Crear una direccion para <i>  @Model.persona.usuarios.Nombre  @Model.persona.usuarios.Apellido </i> </h6>



            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <h5 class="text-justify">
                    @Html.LabelFor(model => model.direccion, new { @class = "control-label col-md-2" })
                </h5>

                @Html.EditorFor(model => model.direccion.direccion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.direccion.direccion, "", new { @class = "text-danger" })



                <h5 class="text-justify">
                    @Html.LabelFor(model => model.direccion.numero, new { @class = "control-label col-md-2" })
                </h5>

                @Html.EditorFor(model => model.direccion.numero, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.direccion.numero, "", new { @class = "text-danger" })



                <h5 class="text-justify">
                    @Html.LabelFor(model => model.direccion.piso, new { @class = "control-label col-md-2" })
                </h5>

                @Html.EditorFor(model => model.direccion.piso, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.direccion.piso, "", new { @class = "text-danger" })



                <h5 class="text-justify">
                    @Html.LabelFor(model => model.direccion.departamento, new { @class = "control-label col-md-2" })
                </h5>

                @Html.EditorFor(model => model.direccion.departamento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.direccion.departamento, "", new { @class = "text-danger" })



                <h5 class="text-justify">
                    @Html.LabelFor(model => model.direccion.localidad, new { @class = "control-label col-md-2" })
                </h5>

                @Html.EditorFor(model => model.direccion.localidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.direccion.localidad, "", new { @class = "text-danger" })



                <h5 class="text-justify">
                    @Html.LabelFor(model => model.direccion.codigoPostal, new { @class = "control-label col-md-2" })
                </h5>

                @Html.EditorFor(model => model.direccion.codigoPostal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.direccion.codigoPostal, "", new { @class = "text-danger" })



                <h5 class="text-justify">
                    @Html.LabelFor(model => model.direccion.provincia, new { @class = "control-label col-md-2" })
                </h5>

                @Html.EditorFor(model => model.direccion.provincia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.direccion.provincia, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.persona.Id)


                <input type="button" class="btn btn-outline-primary " style="margin-left:30%;max-width:40%" value="Volver" onclick="location.href='@Url.Action("Index", "DireccionPersona",new { id=Model.persona.Id})'" />

                <br />

                <input type="submit" style="margin-left:30%;max-width:40%" value="Crear" class="btn btn-outline-info" />

            </div>
        </div>

    </div>
</div>
}